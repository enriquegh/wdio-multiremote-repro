{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": [ "./*" ],
            "src/*": ["./src/*"]
        },
        "types": ["node", "webdriverio/async", "@types/mocha", "@wdio/mocha-framework", "expect-webdriverio"]
    },
    "include": [
        "./tests/**/*.ts",
        "./*.conf.ts"
    ]
}
